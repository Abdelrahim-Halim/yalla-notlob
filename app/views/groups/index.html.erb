
    <% if flash[:error].present? %>
            <div class ="alert alert-danger">
                <%= flash[:error] %>
            </div>
    <% end %>

<%= form_for(Group.new,url: groups_path, method: "post") do |form| %>
    <div class="form-row m-4">
        <div class="form-group col-md-12 row">
                <%= form.label("Add New Group:", class: "col-sm-2 mt-2 mr-0") %> 
                <%= form.text_field(:name, class: "form-control col-sm-4", placeholder: "Add Group" ) %>
                <%= form.submit("Add", class: "col-sm-2 ml-2 btn btn-warning valid") %>
        </div>
    

    </div>
<% end %>

<% if  flash[:notice].present? %>
      <div class="alert alert-success">
      <%= flash[:notice] %>
      </div>
<% end %>

<div class="container bootstrap snippet">
 
   <div class="row">


      <div class="col-sm-3">
            <div class="header">
                <h3 class="text-muted prj-name">
                    <span class="fa fa-users fa-2x principal-title"></span>
                    Groups
                </h3>
            </div>


            <div class="jumbotron list-content p-2">
                <div class="table-responsive">
                <table class="table">
                   <%  @group.each do |group| %>
                       <tr>
                            <td width=60%><%= link_to group.name , group , action: "show" %></td>
                        
                            <td width=40%>
                            
                                 <%= link_to "", group ,url: group_path(group.id ), class:"fa fa-user-plus fa-lg addUser" %>
                      
                                <%= link_to "", group , method: :delete , class:"fa fa-trash fa-lg cancelGroup", data: { confirm: "Are you sure that you want to delete this group ?" } %>
                               
                            </td>
                          
                       </tr>
                    <% end %>    
                </table>
                </div>
            </div>
            
      </div>


      <div class="col-sm-8">
                <div class="header">
                    <h3 class="text-muted prj-name">
                        <span class="fa fa-user fa-2x principal-title"></span>
                    Friend zone
                    </h3>
                </div>


                <div class="jumbotron list-content pt-4 pb-2">
                    <ul class="list-group">
                            <div class="row">
                                <li href="#" class="list-group-item title col-sm-12 mb-3">
                                    Your friends
                                </li>
                            </div>

                            <div class="row pb-2">
                                <% @user_friends.each do |friend| %>           
                                    <li href="#" class="list-group-item text-left col-sm-3.5 shadow mt-auto mr-auto ml-auto mb-3">
                                        <img class="img-thumbnail"  src="https://bootdey.com/img/Content/user_2.jpg">
                                        <label class="name">
                                        <%= friend.id %>
                                        </label>
                                        <label class="pull-right">
                                            
                                            <%= link_to "Unfriend", friendship_path(friend.id), class:"button is-danger",confirm: "Are you sure you want to unfriend #{friend.first_name}?", method: :delete %>
                                        </label>
                                        <div class="break"></div>
                                    </li>
                                <% end %>   
                
                            </div>

                    </ul>
                </div>
        </div>
      <%# </div> %>
    </div>
 </div>



