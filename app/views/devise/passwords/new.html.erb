
<div class="fld">
<h2 class="p">Forgot your password</h2>
<div class="container">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "col-4 form-control" %>
  </div>
 <br> 
</div>
  <div class="actions">
    <%= f.submit "Send me reset password instructions",class:"btn2" %>
    <br>
    <div class="links">
<%= render "devise/shared/links" %>
  </div>
<% end %>
</div>
</div>
